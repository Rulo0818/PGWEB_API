  },
  "item": [
    {
      "name": "1. GET - Todas las Alertas",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/alertas",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "alertas"
          ]
        },
        "description": "Obtener todas las alertas de stock registradas."
      },
      "response": []
    },
    {
      "name": "2. GET - Alertas por ID de Producto",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/alertas/producto/1",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "alertas",
            "producto",
            "1"
          ]
        },
        "description": "Obtener alertas asociadas a un producto específico. Cambia el 1 por el id_producto deseado."
      },
      "response": []
    },
    {
      "name": "3. GET - Alerta por ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/alertas/1",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "alertas",
            "1"
          ]
        },
        "description": "Obtener una alerta específica por su ID. Cambia el 1 por el ID de la alerta."
      },
      "response": []
    },
    {
      "name": "4. POST - Crear Alerta",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id_producto\": 1,\n  \"stock_minimo\": 5,\n  \"stock_maximo\": 50,\n  \"notificar\": true\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:3000/api/alertas",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "alertas"
          ]
        },
        "description": "Crear una nueva alerta de stock. Campos obligatorios: id_producto, stock_minimo, stock_maximo. El campo notificar es opcional."
      },
      "response": []
    },
    {
      "name": "5. PUT - Actualizar Alerta",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id_producto\": 1,\n  \"stock_minimo\": 10,\n  \"stock_maximo\": 60,\n  \"notificar\": false\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:3000/api/alertas/1",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "alertas",
            "1"
          ]
        },
        "description": "Actualizar una alerta existente. Cambia el 1 en la URL por el ID de la alerta. Puedes enviar solo los campos que quieras actualizar."
      },
      "response": []
    },
    {
      "name": "6. DELETE - Eliminar Alerta",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/alertas/1",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "alertas",
            "1"
          ]
        },
        "description": "Eliminar una alerta por ID. Cambia el 1 por el ID de la alerta que deseas eliminar."
