{
  "info": {
    "_postman_id": "pgweb-api-notificaciones-collection",
    "name": "PGWEB API - Notificaciones",
    "description": "Colección de endpoints para gestionar notificaciones en la API PGWEB",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. GET - Todas las Notificaciones",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/notificaciones",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "notificaciones"
          ]
        },
        "description": "Obtener todas las notificaciones registradas."
      },
      "response": []
    },
    {
      "name": "2. GET - Notificación por ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/notificaciones/1",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "notificaciones",
            "1"
          ]
        },
        "description": "Obtener una notificación específica por su ID. Cambia el 1 por el ID de la notificación."
      },
      "response": []
    },
    {
      "name": "3. POST - Crear Notificación",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"titulo\": \"Stock bajo\",\n  \"mensaje\": \"El producto X tiene stock bajo\",\n  \"tipo\": \"alerta\",\n  \"fecha\": \"2025-01-01T10:00:00.000Z\",\n  \"leido\": false\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:3000/api/notificaciones",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "notificaciones"
          ]
        },
        "description": "Crear una nueva notificación. Campos obligatorios: titulo, mensaje. Campo tipo opcional (valores válidos: info, alerta, error). fecha y leido también son opcionales."
      },
      "response": []
    },
    {
      "name": "4. PUT - Actualizar Notificación",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"titulo\": \"Stock crítico\",\n  \"mensaje\": \"El producto X está por agotarse\",\n  \"tipo\": \"error\",\n  \"fecha\": \"2025-01-02T12:00:00.000Z\",\n  \"leido\": true\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:3000/api/notificaciones/1",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "notificaciones",
            "1"
          ]
        },
        "description": "Actualizar una notificación existente. Cambia el 1 en la URL por el ID de la notificación. Puedes enviar solo los campos que quieras actualizar."
      },
      "response": []
    },
    {
      "name": "5. DELETE - Eliminar Notificación",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/notificaciones/1",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "notificaciones",
            "1"
          ]
        },
        "description": "Eliminar una notificación por ID. Cambia el 1 por el ID de la notificación que deseas eliminar."
      },
      "response": []
    }
  ]
}


